# AgentCore Configuration Template
# Copy this to .bedrock_agentcore.yaml and customize for your environment

agent_name: coding-agent
region: ap-southeast-2

runtime:
  entrypoint: src.agent.runtime
  python_version: "3.11"

oauth_configuration:
  workload_name: coding-agent-workload
  credential_providers:
    - github-provider  # Must match provider name in setup_provider.py

environment_variables:
  LOG_LEVEL: INFO
  MODEL_ID: anthropic.claude-sonnet-4.5
  GITHUB_PROVIDER_NAME: github-provider
  OAUTH_WORKLOAD_NAME: coding-agent-workload

# Optional: Resource configuration
# resources:
#   memory: 2048
#   cpu: 1024
